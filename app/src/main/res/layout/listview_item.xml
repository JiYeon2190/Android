<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <View
                android:id="@+id/view"
                android:layout_width="360dp"
                android:layout_height="130dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle_3988_ek1_shape" />

            <TextView
                android:id="@+id/title"
                android:layout_width="169dp"
                android:layout_height="25dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:text="@string/headline_ek4_string"
                android:textColor="@color/________color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/content"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="10dp"
                android:text="@string/headline_ek4_string"
                android:textColor="@color/________color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="80dp"
                android:layout_height="18dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="10dp"
                android:text="@string/_2022_08_20_ek4_string"
                android:textColor="@color/________color" />

            <ImageButton
                android:id="@+id/img"
                android:layout_width="125dp"
                android:layout_height="90dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle_4018_ek1_shape" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>